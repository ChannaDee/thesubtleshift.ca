---
import Layout from '../layouts/Layout.astro';
import CallToAction from '../components/CallToAction.astro';
---

<Layout title="Wellness | The Subtle Shift">
<section class="section">
    <div class="container">
        <div class="section-header first-section-header">
            <div class="section-tag">Wellness</div>
            <h1 class="section-title">Holistic Wellness</h1>
            <p class="section-description">Supporting your physical and spiritual well-being through carefully selected wellness products.</p>
        </div>

        <div class="wellness-content">
            <div class="wellness-section">
                <h2>Three Supplements</h2>
                <p>Discover our curated selection of supplements designed to support your holistic wellness journey.</p>
                
                <!-- Content placeholder for supplements -->
                <div class="supplements-placeholder">
                    <p><em>Supplement information and products coming soon...</em></p>
                </div>
            </div>
        </div>
    </div>
</section>

<CallToAction />
</Layout> 