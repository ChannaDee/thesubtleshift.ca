---
import Layout from '../layouts/Layout.astro';
import CallToAction from '../components/CallToAction.astro';
---

<Layout title="Stay at Ravenswood | The Subtle Shift">
<section class="section">
    <div class="container">
        <div class="section-header first-section-header">
            <div class="section-tag">Accommodation</div>
            <h1 class="section-title">Stay at Ravenswood</h1>
            <p class="section-description">Experience the tranquility of our rustic retreat sanctuary nestled in the woods of Trent Lakes, Ontario.</p>
        </div>

        <div class="stay-content">
            <div class="stay-section">
                <h2>Retreat Accommodation</h2>
                <p>Immerse yourself in nature while enjoying comfortable accommodations designed for rest, reflection, and renewal.</p>
                
                <!-- Content placeholder for accommodation details -->
                <div class="accommodation-placeholder">
                    <p><em>Accommodation details and booking information coming soon...</em></p>
                </div>
            </div>
        </div>
    </div>
</section>

<CallToAction />
</Layout> 