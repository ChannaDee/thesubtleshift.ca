---
import Layout from '../layouts/Layout.astro';
import CallToAction from '../components/CallToAction.astro';
---

<Layout title="Daily Oracle | The Subtle Shift">
<section class="section">
    <div class="container">
        <div class="section-header first-section-header">
            <div class="section-tag">Oracle</div>
            <h1 class="section-title">Daily Oracle</h1>
            <p class="section-description">Receive daily spiritual guidance and divine messages to illuminate your path.</p>
        </div>

        <div class="oracle-content">
            <div class="oracle-section">
                <h2>Today's Message</h2>
                <p>Welcome to your daily oracle experience. Each day brings new wisdom and guidance from the divine.</p>
                
                <!-- Content placeholder for oracle cards/messages -->
                <div class="oracle-placeholder">
                    <p><em>Daily oracle messages coming soon...</em></p>
                </div>
            </div>
        </div>
    </div>
</section>

<CallToAction />
</Layout> 