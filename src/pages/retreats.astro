---
import Layout from '../layouts/Layout.astro';
import CallToAction from '../components/CallToAction.astro';
---

<Layout title="Subtle Shift Retreats | The Subtle Shift">
<section class="section">
    <div class="container">
        <div class="section-header first-section-header">
            <div class="section-tag">Retreats</div>
            <h1 class="section-title">Subtle Shift Retreats</h1>
            <p class="section-description">Transformative retreat experiences guided by our dedicated team of spiritual practitioners.</p>
        </div>

        <div class="retreats-content">
            <div class="retreat-types">
                <h2>Retreat Experiences</h2>
                
                <div class="retreat-type">
                    <h3>Team & Group Retreats</h3>
                    <p>Join our collaborative retreat experiences led by our expert team.</p>
                </div>
                
                <div class="retreat-type">
                    <h3>Courses</h3>
                    <ul>
                        <li>Soulpath Circle</li>
                        <li>Holistics & Mystics</li>
                        <li>And more transformative courses</li>
                    </ul>
                </div>
                
                <div class="retreat-type">
                    <h3>Private Group Experiences</h3>
                    <p>Customized retreat experiences for your group's unique spiritual journey.</p>
                </div>
            </div>
            
            <div class="team-section">
                <h2>Our Retreat Team</h2>
                <div class="team-members">
                    <div class="team-member">
                        <h4>Denise</h4>
                        <p>Lead spiritual guide and energy healer</p>
                    </div>
                    <div class="team-member">
                        <h4>Victoria</h4>
                        <p>Retreat facilitator and spiritual practitioner</p>
                    </div>
                    <div class="team-member">
                        <h4>Rachelle</h4>
                        <p>Holistic wellness specialist</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<CallToAction />
</Layout> 